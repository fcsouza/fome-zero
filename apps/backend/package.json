    "better-auth": "^1.3.33",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.36.4",
    "elysia": "^1.4.13",
    "elysia-rate-limit": "^4.4.2",
    "openai": "^6.10.0",
    "pdfkit": "^0.17.2",
